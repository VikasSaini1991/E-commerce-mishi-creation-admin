<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_light_black"/>
            <stroke
                android:width="2dp"
                android:color="@color/color_light_black"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/color_light_black"
                android:startColor="@color/color_light_black"/>
            <stroke
                android:width="4dp"
                android:color="@color/color_light_black"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>