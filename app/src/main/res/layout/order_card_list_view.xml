<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_order"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/name"
            />
        <TextView
            android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickUp"
            android:textSize="15sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_order_user_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/pickup"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="15sp"
            android:layout_below="@id/tv_order_user_name"/>
        <TextView
            android:id="@+id/tv_order_user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/tv_order_user_name"
            android:layout_toRightOf="@id/address"
            />

        <TextView
            android:id="@+id/s_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_product"
            android:textSize="15sp"
            android:layout_below="@id/address"/>
        <TextView
            android:id="@+id/tv_order_user_s_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/tv_order_user_address"
            android:layout_toRightOf="@id/s_product"
            />
        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_no"
            android:textSize="15sp"

            android:layout_toLeftOf="@id/tv_order_user_phone_no"/>
        <TextView
            android:id="@+id/tv_order_user_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLength="13"
            android:layout_alignParentRight="true"

            />
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
           android:layout_toLeftOf="@id/tv_order_user_total_price"
            android:layout_below="@id/phone_no"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_order_user_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLength="10"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_user_phone_no"
            />
        <TextView
            android:id="@+id/after_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/total_price"
            android:text="@string/after_discount"
            android:layout_toLeftOf="@id/tv_order_after_discount_price"
            />
        <TextView
            android:id="@+id/tv_order_after_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLength="10"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_user_total_price"
     />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         >
        <Button
            android:id="@+id/b_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="@color/white_color"
            android:textSize="10sp"
            android:background="@color/dark_blue_color"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>

    </RelativeLayout>





    </android.support.v7.widget.CardView>