<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    tools:context=".activities.OrderDetailsActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      >

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/name"
          android:textSize="20sp"/>
      <TextView
          android:id="@+id/order_details_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:textSize="20sp"
          android:text="@string/category_edit"
          />
      <TextView
          android:id="@+id/address"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/name"
          android:text="@string/address"
          android:textSize="20sp"/>
      <TextView
          android:id="@+id/order_details_user_address"
          android:layout_alignParentRight="true"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/category_edit"
          android:textSize="20sp"
          android:layout_below="@id/order_details_user_name"
          />
      <TextView
          android:id="@+id/phone_no"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:text="@string/phone_no"
          android:layout_below="@id/address"
          />
      <TextView
          android:id="@+id/order_details_user_phone_no"
          android:layout_marginTop="20dp"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/category_edit"
          android:textSize="20sp"
          android:layout_below="@id/order_details_user_address"
          />
      <TextView
          android:id="@+id/s_product"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/s_product"
          android:textSize="20sp"
          android:layout_below="@id/phone_no"/>
      <TextView
          android:id="@+id/order_details_user_s_product"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="20dp"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/category_edit"
          android:textSize="20sp"
          android:layout_below="@id/order_details_user_phone_no"

          />
      <TextView
          android:id="@+id/total_price"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:text="@string/total_price"
          android:layout_below="@id/s_product"/>
      <TextView
          android:id="@+id/order_details_user_total_price"
          android:layout_marginTop="20dp"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/category_edit"
          android:textSize="20sp"
          android:layout_below="@id/order_details_user_s_product"
          />
  </RelativeLayout>


</RelativeLayout>