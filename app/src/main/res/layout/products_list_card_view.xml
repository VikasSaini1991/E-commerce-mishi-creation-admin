<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/b_product_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_button_background"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/edit"
                android:textColor="@color/white_color" />

            <ImageView
                android:id="@+id/iv_product_image_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:text="@string/total_price"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/iv_product_image_card_view"
                android:textColor="@color/black_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_product_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/total_price"
                android:layout_below="@id/iv_product_image_card_view"
                android:textColor="@color/black_color"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/after_discount"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/iv_product_image_card_view"
                android:layout_toRightOf="@id/tv_product_total_price"
                />
            <TextView
                android:id="@+id/tv_product_after_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:layout_below="@id/iv_product_image_card_view"
                android:layout_toRightOf="@id/after_discount"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/b_product_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_total_price"
                android:background="@drawable/edit_button_background"
                android:text="@string/delete"
                android:textColor="@color/white_color"
                android:textSize="15sp"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>




