<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/b_product_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_button_background"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/edit"
                android:textColor="@color/white_color" />

            <ImageView
                android:id="@+id/iv_product_image_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_product_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_product_image_card_view"
                android:text="@string/total_price"
                android:textColor="@color/black_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b_product_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_product_total_price"
                android:background="@drawable/edit_button_background"
                android:text="@string/delete"
                android:textColor="@color/white_color"
                android:textSize="20sp"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>




