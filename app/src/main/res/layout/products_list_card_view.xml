<?xml version="1.0" encoding="utf-8"?>



    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:id="@+id/b_product_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_button_background"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/edit"
                android:textColor="@color/color_white" />

            <ImageView
                android:id="@+id/iv_product_image_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />
            <RelativeLayout
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_product_image_card_view">
                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/name"
                    android:textSize="13sp"
                    android:textColor="@color/color_black"
                    />
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:layout_marginRight="5dp"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:text="@string/price"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_product_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/price"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/color_black"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/after_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_discount"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@id/tv_product_after_discount"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"


                    />
                <TextView
                    android:id="@+id/tv_product_after_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_price">


            <Button
                android:id="@+id/b_product_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_dark_blue"
                android:text="@string/delete"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>




